<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}{{ 'pediatric.software'|trans }}{% endblock %}</title>

        {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}

            {% stylesheets filter="cssrewrite, ?scssphp"
                'assets/bootstrap/css/bootstrap.min.css'
                'assets/DataTables/media/css/dataTables.bootstrap.min.css'
                'assets/DataTables/extensions/Responsive/css/responsive.dataTables.min.css'
                'assets/DataTables/extensions/Buttons/css/buttons.dataTables.min.css'
                'assets/DataTables/extensions/FixedHeader/css/fixedHeader.dataTables.min.css'
                'assets/custom/css/call-to-action.css'
                'assets/custom/css/wizard.css'
                'assets/jquery-ui/jquery-ui.css'

                'assets/custom/css/custom.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
    </head>

    <body>
   
        {# variables #}
        {% set person_type_list = {patient:'patient', mother:'mother', father:'father'} %}

        {# directories and files definition #}
            {# templ_d = template_directory #}
            {# templ_f = template_file #}
            
            {# incl_d = include_directory #}
            {# incl_f = include_directory #}

        {## Begin PSCustomerBundle variables ##}
            {# inlude_add_wizard  #}
            {% set incl_d_add_wizard = 'PSCustomerBundle:Patient:include/include_add_wizard' %}
            {% set incl_f_add_patient_form = incl_d_add_wizard ~ '/addPatientForm.html.twig' %}
            {% set incl_f_add_address_form = incl_d_add_wizard ~ '/addAddressForm.html.twig' %}
            {% set incl_f_wizard_presentation = incl_d_add_wizard ~ '/wizardPresentation.html.twig' %}

            {# template_add_wizard  #}
            {% set templ_d_add_wizard = 'PSCustomerBundle:Patient:template/template_add_wizard' %}
            {% set templ_f_create_or_select_form = templ_d_add_wizard ~ '/createOrSelectForm.html.twig' %}
            {% set templ_f_create_or_select_parent_form = templ_d_add_wizard ~ '/createOrSelectParentForm.html.twig' %}
            {% set templ_f_next_previous_button = templ_d_add_wizard ~ '/nextPreviousButton.html.twig' %}
            {% set templ_f_wizard_presentation_step = templ_d_add_wizard ~ '/wizardPresentationStep.html.twig' %}

            {# template_misc  #}
            {% set templ_d_misc = 'PSCustomerBundle:Patient:template/template_misc' %}
            {% set templ_f_view_person = templ_d_misc ~ '/view_person.html.twig' %}

            {# inlude_table  #}
            {% set incl_d_table_customer = 'PSCustomerBundle:Patient:include/include_table' %}
            {% set incl_f_thead_full_person = incl_d_table_customer ~ '/thead_full_person.html.twig' %}

            {# template_table  #}
            {% set templ_d_table_customer = 'PSCustomerBundle:Patient:template/template_table' %}
            {% set templ_f_tbody_address = templ_d_table_customer ~ '/tbody_address.html.twig' %}
            {% set templ_f_tbody_icons_person = templ_d_table_customer ~ '/tbody_icons_person.html.twig' %}
            {% set templ_f_tbody_person = templ_d_table_customer ~ '/tbody_person.html.twig' %}
            {% set templ_f_thead_address = templ_d_table_customer ~ '/thead_address.html.twig' %}
            {% set templ_f_thead_icons = templ_d_table_customer ~ '/thead_icons.html.twig' %}
            {% set templ_f_thead_person = templ_d_table_customer ~ '/thead_person.html.twig' %}
        {## End PSCustomerBundle variables ##}
        
        {## Begin PSConsultationBundle variables ##}
            {# inlude  #}
            {% set incl_d_consult = 'PSConsultationBundle:Consultation:include' %}
            {% set incl_f_thead_full_consult = incl_d_consult ~ '/thead_full_consult.html.twig' %}
            
            {# template  #}
            {% set templ_d_consult = 'PSConsultationBundle:Consultation:template' %}
            {% set templ_f_edit_consult_card_layout = templ_d_consult  ~ '/edit_consult_card_layout.html.twig' %}
            
        {## End PSConsultationBundle variables ##}
        
        {# menu #}
        {% set incl_f_menu = 'PSCoreBundle::menu.html.twig' %}

        
        <div class="container">
            <header class="row">
                <div class="col-md-12">
                    {% include incl_f_menu %}
                </div>
            </header>

            <section class="row">
                <div id="content" class="col-md-12">
                    {% block content %}
                    {% endblock %}
                </div>
            </section>
            
            <footer class="row" >
               <div class="col-md-12">
                    <p class="text-muted">  {{ 'footer.signature'|trans }} </p>
                </div>
            </footer>
        </div>

        {% block javascripts %}
            {% javascripts 
                'assets/jquery/jquery.min.js' 
                'assets/bootstrap/js/bootstrap.min.js'
                'assets/DataTables/media/js/jquery.dataTables.min.js'
                'assets/DataTables/media/js/dataTables.bootstrap.min.js'
                'assets/DataTables/extensions/ColReorder/js/dataTables.colReorder.min.js'
                'assets/DataTables/extensions/Responsive/js/dataTables.responsive.min.js'
                'assets/DataTables/extensions/Buttons/js/dataTables.buttons.min.js'
                'assets/DataTables/extensions/FixedHeader/js/dataTables.fixedHeader.min.js'
                'assets/DataTables/buttons.colvis/buttons.colVis.min.js'
                'assets/DataTables/Plugins-master/sorting/custom-data-source/dom-checkbox.js'
                'assets/notify/notify.js'
                'assets/jquery-ajaxQueue/dist/jquery.ajaxQueue.js'
                'assets/jquery-ui/jquery-ui.js'
                'assets/jquery-ui/i18n/datepicker-fr.js'

                'assets/custom/js/custom_misc.js'
                'assets/custom/js/custom_datatable.js'
                'assets/custom/js/custom_add_wizard.js'
                'assets/custom/js/custom_consultation.js'
                'assets/custom/js/custom_add_patient_animation.js'


            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>

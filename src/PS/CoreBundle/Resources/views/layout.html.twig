<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{{ 'pediatric.software'|trans }}{% endblock %}</title>

    {% block stylesheets %}
      {# On charge le CSS de bootstrap depuis le site directement #}

      {% stylesheets filter="cssrewrite, ?scssphp"
        'assets/bootstrap/css/bootstrap.min.css'
        'assets/custom/wizard/wizard.css'
      %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
      {% endstylesheets %}
    {% endblock %}
  </head>

  <body>
      
  <div class="container">
      
      <div class="col-md-12">
      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"> {{ 'pediatric.title'|trans }} </a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#"> {{ 'consultation.new'|trans }} </a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> {{ 'consultation.manage'|trans }} <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#"> {{ 'consultation.new'|trans }} </a></li>
                  <li><a href="#"> {{ 'consultation.list'|trans }} </a></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> {{ 'patient.manage'|trans }} <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('ps_patient_add') }}"> {{ 'patient.add'|trans }} </a></li>
                  <li><a href="{{ path('ps_patient_add') }}"> {{ 'patient.mother.add'|trans }} </a></li>
                  <li><a href="{{ path('ps_patient_add') }}"> {{ 'patient.father.add'|trans }} </a></li>
                  <li><a href="#"> {{ 'patient.list'|trans }} </a></li>
                </ul>
              </li>             
            </ul>
              
            <ul class="nav navbar-nav navbar-right">               
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li class="active"><a href="#"> {{ 'connected.as'|trans({'%username%': app.user.username}) }} <span class="sr-only">(current)</span></a></li>
                    <li> <a href="{{ path('fos_user_security_logout') }}">  {{ 'logout'|trans }} </a></li>
                {% else %}
                    <li> <a href="{{ path('fos_user_security_login') }}"> {{ 'login'|trans }}</a></li>
                {% endif %}
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
      </div>
      

      <div id="content" class="col-md-12">
        {% block body %}
        {% endblock %}
      </div>

    <hr>

    <footer class="col-md-12" >
      <p>  {{ 'footer.signature'|trans }} </p>
    </footer>
  </div>
  
    {% javascripts 
      'assets/jquery/jquery.min.js' 
      'assets/bootstrap/js/bootstrap.min.js'
      'assets/custom/wizard/wizard.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

  

  </body>
</html>

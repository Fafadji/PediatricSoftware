{% extends "PSCoreBundle::layout.html.twig" %}

{% block content %}
    
    {% if listPatients is defined and listPatients|length %}
 
        <table id="listPatients" class="table table-striped table-bordered display responsive nowrap" cellspacing="0" width="100%">
            <thead>
                {% include 'PSCustomerBundle:Patient:tableCommonHeaderFooter.html.twig' %}
            </thead>
            <tfoot>
                {% include 'PSCustomerBundle:Patient:tableCommonHeaderFooter.html.twig' %}
            </tfoot>
            <tbody>
                {% for patient in listPatients %}
                    <tr>
                        <td>{{ patient.id }}</td>
                        <td><a href=" {{ path( 'ps_patient_view', {'id': patient.id} ) }} "> <i class="glyphicon glyphicon-search"></i></a></td>
                        <td><i class="glyphicon glyphicon-pencil"></i></td>
                        <td><i class="glyphicon glyphicon-trash"></i></td>
                        
                        
                        <td>{{ patient.name }}</td>
                        <td>{{ patient.surname }}</td>
                        <td>{{ patient.sex |trans }}</td>
                        <td>{{ patient.birthday is empty ? "inconnu" : patient.birthday |date("d/m/Y") }}</td>
                        <td>{{ patient.codeSiblings }}</td>
                        <td>{{ patient.comment }}</td>
                    </tr>
                 {% endfor %}
            </tbody>
        </table>
                
    {% else %}
        Pas encore de patient    
    {% endif %}
    
{% endblock %}
{% extends "PSCustomerBundle::layout.html.twig" %}

{% block body %}

<div class="container">
    
    {% if listPatients is defined and listPatients|length %}
 
        <table id="listPatients" class="table table-striped table-bordered display responsive nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th><i class="glyphicon glyphicon-search"></i></th>
                    <th>{{ 'patient.id'|trans }}</th>
                    <th>{{ 'patient.name'|trans }}</th>
                    <th>{{ 'patient.surname'|trans }}</th>
                    <th>{{ 'patient.sex'|trans }}</th>
                    <th>{{ 'patient.birthday'|trans }}</th>
                    <th>{{ 'patient.patient.code.siblings'|trans }}</th>
                    <th>{{ 'patient.comment'|trans }}</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th><i class="glyphicon glyphicon-search"></i></th>
                    <th>{{ 'patient.id'|trans }}</th>
                    <th>{{ 'patient.name'|trans }}</th>
                    <th>{{ 'patient.surname'|trans }}</th>
                    <th>{{ 'patient.sex'|trans }}</th>
                    <th>{{ 'patient.birthday'|trans }}</th>
                    <th>{{ 'patient.patient.code.siblings'|trans }}</th>
                    <th>{{ 'patient.comment'|trans }}</th>
                </tr>
            </tfoot>
            <tbody>
                {% for patient in listPatients %}
                    <tr>
                        <td><i class="glyphicon glyphicon-search"></i></td>
                        <td>{{ patient.id }}</td>
                        <td>{{ patient.name }}</td>
                        <td>{{ patient.surname }}</td>
                        <td>{{ patient.sex }}</td>
                        <td>{{ patient.birthday is empty ? "inconnu" : patient.birthday |date("d/m/Y") }}</td>
                        <td>{{ patient.codeSiblings }}</td>
                        <td>{{ patient.comment }}</td>
                    </tr>
                 {% endfor %}
            </tbody>
        </table>
                
    {% else %}
        Pas encore de patient    
    {% endif %}
</div>
{% endblock %}
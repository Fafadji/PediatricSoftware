<div class="col-md-12">
    <div class="bs-calltoaction bs-calltoaction-info  cta-contents">
        <h3 class="cta-title"> {{ 'patient.info'|trans }} </h3>
    </div>
    <div id="panel_create_patient" class="panel panel-info"> 
        <table id="create_patient_table" class="table table-striped table-bordered display responsive nowrap" cellspacing="0" width="100%">
            <div class="panel-heading form-group">
               <h3 class="panel-title">{{ "create.new.patient"|trans }} </h3>
            </div>
            <tbody>
                <tr>
                    <div class="form-group table_body_padding">
                        {{ form_row(form.name) }}
                        {{ form_row(form.surname) }}
                        {{ form_row(form.sex, { 'label_attr' : {'id' : 'ps_customerbundle_patient_sex_label'}}) }}
                        {{ form_row(form.birthday) }}
                        {{ form_row(form.codeSiblings) }}
                        {{ form_row(form.comment) }}
                   </div>
               </tr>
            </tbody>
        </table>
    </div>
</div>
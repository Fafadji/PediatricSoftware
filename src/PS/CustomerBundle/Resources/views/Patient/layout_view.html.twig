{% extends "PSCoreBundle::layout.html.twig" %}

{% block content %}
    <section class="row">
        <article  class="col-md-6">

            {% block content_patient_panel_div %} <div class="panel panel-primary"> {% endblock %}
                <table class="table table-striped table-view-patient">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'patient.info'|trans }}</h3>
                </div>
                    {% block content_patient %}
                    {% endblock %}
                </table>
            </div>

        </article>
        <article  class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'patient.general.medical.info'|trans }}</h3>
                </div>
                <div class="panel-body">
                    {% block content_patient_med_info %}
                    {% endblock %}
                </div>
            </div>
        </article>
        
    </section>

    <section class="row">
        <article  class="col-md-6">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'mother.info'|trans }}</h3>
                </div>
                <div class="panel-body">
                    {% block content_mother %}
                    {% endblock %}
                </div>
            </div>
        </article>
        <article  class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'father.info'|trans }}</h3>
                </div>
                <div class="panel-body">
                    {% block content_father %}
                    {% endblock %}
                </div>
            </div>
        </article>
        
    </section>
{% endblock %}